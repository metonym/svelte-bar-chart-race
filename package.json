{
  "name": "svelte-bar-chart-race",
  "version": "0.1.4",
  "license": "MIT",
  "description": "Bar chart race visualization for Svelte",
  "author": "Eric Liu (https://github.com/metonym)",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./*.svelte": {
      "types": "./dist/*.svelte.d.ts",
      "import": "./dist/*.svelte"
    }
  },
  "scripts": {
    "dev": "bun --bun vite dev",
    "build": "bun --bun vite build",
    "preview": "bun --bun vite preview",
    "package": "bun --bun svelte-package",
    "test": "bun test",
    "check": "bun --bun svelte-check --tsconfig ./tsconfig.json",
    "format": "bun --bun prettier --write .  --cache"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.3.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.50.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.9",
    "culls": "^0.1.2",
    "prettier": "^3.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^4.2.20",
    "svelte-check": "^3.8.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metonym/svelte-bar-chart-race.git"
  },
  "homepage": "https://github.com/metonym/svelte-bar-chart-race",
  "bugs": "https://github.com/metonym/svelte-bar-chart-race/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "bar chart race"
  ],
  "files": [
    "dist"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
