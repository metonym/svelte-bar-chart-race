{
  "name": "svelte-bar-chart-race",
  "version": "0.1.2",
  "license": "MIT",
  "description": "Bar chart race visualization for Svelte",
  "author": "Eric Liu (https://github.com/metonym)",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./*.svelte": {
      "types": "./dist/*.svelte.d.ts",
      "import": "./dist/*.svelte"
    }
  },
  "scripts": {
    "dev": "bun --bun vite dev",
    "build": "bun --bun vite build",
    "preview": "bun --bun vite preview",
    "package": "bun --bun svelte-package",
    "test": "bun test",
    "check": "bun --bun svelte-check --tsconfig ./tsconfig.json",
    "format": "bun --bun prettier --write .  --cache"
  },
  "peerDependencies": {
    "svelte": "^3.51 || ^4"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^14.12.3",
    "@sveltejs/adapter-static": "3.0.1",
    "@sveltejs/kit": "^2.5.25",
    "@sveltejs/package": "^2.3.4",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/svelte": "^4.2.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/bun": "^1.1.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.3",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-bar-chart-race.git"
  },
  "homepage": "https://github.com/metonym/svelte-bar-chart-race",
  "bugs": "https://github.com/metonym/svelte-bar-chart-race/issues",
  "keywords": [
    "svelte",
    "svelte component",
    "bar chart race"
  ],
  "files": [
    "dist"
  ],
  "prettier": {
    "plugins": [
      "prettier-plugin-svelte"
    ]
  }
}
